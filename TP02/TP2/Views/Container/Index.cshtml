@model IEnumerable<TP2.Models.Container>

@{
    ViewData["Title"] = "Lista de Containers";
}

@if (TempData["SuccessMessage"] != null)
{
    <div id="success-alert" class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Criar Novo Container</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Número</th>
            <th>Tipo</th>
            <th>Tamanho</th>
            <th>BL Associado</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Numero)</td>
                <td>@Html.DisplayFor(modelItem => item.Tipo)</td>
                <td>@Html.DisplayFor(modelItem => item.Tamanho)</td>
                <td>@Html.DisplayFor(modelItem => item.BL.Numero)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        var successAlert = document.getElementById('success-alert');
        if (successAlert) {
            setTimeout(function() {
                successAlert.style.display = 'none';
            }, 3000);
        }
    </script>
}