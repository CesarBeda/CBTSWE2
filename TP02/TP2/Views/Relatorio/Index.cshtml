@model List<TP2.Models.BL>

@{
    ViewData["Title"] = "Relatório de BLs e Containers";
}

<div class="container my-5">
    <div class="card shadow-sm p-4">
        <h2 class="text-center mb-4">
            Relatório de BLs e Containers
        </h2>

        @if (Model != null && Model.Any())
        {
            foreach (var bl in Model)
            {
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-dark text-white">
                        <h5 class="mb-0">
                            BL: @bl.Numero
                            <small class="text-white-50 float-end">Consignee: @bl.Consignee | Navio: @bl.Navio</small>
                        </h5>
                    </div>
                    <div class="card-body">
                        <h6 class="card-subtitle mb-3 text-muted">Containers Associados:</h6>
                        @if (bl.Containers != null && bl.Containers.Any())
                        {
                            <table class="table table-sm table-hover">
                                <thead>
                                    <tr>
                                        <th>Número</th>
                                        <th>Tipo</th>
                                        <th>Tamanho</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var c in bl.Containers)
                                    {
                                        <tr>
                                            <td>@c.Numero</td>
                                            <td>@c.Tipo</td>
                                            <td>@c.Tamanho</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <p class="text-muted">Nenhum container associado a este BL.</p>
                        }
                    </div>
                </div>
            }
        }
        else
        {
            <div class="alert alert-info text-center" role="alert">
                <h4 class="alert-heading">Nenhum BL encontrado!</h4>
                <p>Não há dados para exibir no relatório. Por favor, cadastre um novo BL.</p>
            </div>
        }
    </div>
</div>