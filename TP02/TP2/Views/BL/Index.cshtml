@model IEnumerable<TP2.Models.BL>

@{
    ViewData["Title"] = "Lista de BLs";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div id="success-alert" class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

<p>
    <a asp-action="Create">Criar Novo BL</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Número
            </th>
            <th>
                Consignee
            </th>
            <th>
                Navio
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Numero)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Consignee)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Navio)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        var successAlert = document.getElementById('success-alert');
        if (successAlert) {
            setTimeout(function() {
                successAlert.style.display = 'none';
            }, 3000); // 3 segundos
        }
    </script>
}